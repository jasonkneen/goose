{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Electron Main Process",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "program": "${workspaceFolder}/main.js",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "args": ["."],
            "outputCapture": "std",
            "console": "integratedTerminal"
        }
    ]
}
